#!/usr/bin/env zsh

# Handles parameters passed into the script
while [[ "$#" -gt 0 ]]
do case $1 in
    -h|--hostName) hostName=$2
    shift;;
    *) echo "Unknown parameter: $1"
    shift;; 
esac
shift
done

currentDirectory=$(pwd)

mkdir -p /tmp/Git.Repositories
cd /tmp/Git.Repositories
git pull || git clone "git@github.com:Jamie050401/nixos.git"

cd ./nixos
sudo nixos-rebuild switch --flake .#$hostName

cd $currentDirectory
